<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="rik.imaginary.reddit.imaginary.karma"
    android:versionCode="3"
    android:versionName="1.1" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="15" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".LeaderBoardActivity"
            android:label="Reddit Imaginary Karma" 
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="BuyActivity" >
        </activity>
        <activity android:name="SellActivity" >
        </activity>
        <activity android:name="PrefsFragment" >
        </activity>
        <activity
            android:name="com.google.ads.AdActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize" >
        </activity>
        <activity android:name="rik.imaginary.reddit.imaginary.karma.ChooseSubRedditActivity" >
        </activity>
    </application>

</manifest>